<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-40dp"
        app:srcCompat="@drawable/rectangle"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="13dp" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/baseline_square_24" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/user_profile_empty_foreground" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="40dp"
        android:background="@color/material_on_primary_disabled"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/notif" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:outlineAmbientShadowColor="@color/design_default_color_primary_dark"
        android:outlineSpotShadowColor="@color/black"
        android:backgroundTint="@color/cardview_shadow_start_color"

        android:src="@drawable/rectangle_white"/>

    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="680dp"
        android:background="@color/material_on_primary_disabled"
        android:src="@drawable/home_unclick2" />

    <ImageButton
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_on_primary_disabled"
        android:layout_marginTop="680dp"
        android:layout_marginStart="130dp"
        android:src="@drawable/paper_upload_clicked"/>

    <ImageButton
        android:id="@+id/buttonBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_on_primary_disabled"
        android:layout_marginTop="680dp"
        android:layout_marginStart="235dp"
        android:src="@drawable/buy"/>

    <ImageButton
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_on_primary_disabled"
        android:layout_marginTop="680dp"
        android:layout_marginStart="340dp"
        android:src="@drawable/profile"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="77dp"
        android:layout_below="@id/imageView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                android:text="Upload Food Waste"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:textStyle="bold" />

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                android:background="@color/black"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_dark" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                android:text="Upload Gambar"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="110dp"
                app:srcCompat="@drawable/rectangle_gray" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:layout_marginTop="150dp"
                android:background="@color/material_on_primary_disabled"
                app:srcCompat="@android:drawable/ic_menu_add" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                android:text="Upload Gambar Klik disini"
                android:textColor="#767676"
                android:textSize="14dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="330dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusBottomEnd="20dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Masukkan deskripsi barang"
                    android:inputType="text"
                    android:textAlignment="textStart" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="460dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                android:text="Lokasi"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="500dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="90dp"
                app:boxCornerRadiusTopStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusBottomEnd="20dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Masukkan lokasi pengambilan"
                    android:inputType="text"
                    android:textAlignment="textStart" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="650dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="90dp"
                android:background="@color/black"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_dark" />

            <Button
                android:id="@+id/buttonUploadEnter"
                style="@style/Widget.Material3.Button"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="670dp"
                android:layout_marginEnd="85dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="#4EB193"
                android:text="Upload" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

